    else:
        st.error("рдХреГрдкрдпрд╛ рдХреБрдЫ рд▓рд┐рдЦреЗрдВ!")
# Project: Negative Energy vs Logic Checker
# Iska maksad yeh samajhna hai ki pareshani "totke" se hai ya "lifestyle" se.

def check_person_status(person_type, symptoms):
    status_report = []
    
    # 1. Mahilaon ke liye special checks
    if person_type == "female":
        if "constant_tiredness" in symptoms:
            status_report.append("Check: Vitamin D/B12 or Hemoglobin levels (Medical)")
        if "sudden_anger" in symptoms:
            status_report.append("Check: Hormonal balance or Mental stress (Health)")
        if "feeling_stuck" in symptoms:
            status_report.append("Check: Lack of personal time or social support (Support)")

    # 2. Kaam rukne ka logic (Work blockage)
    if "work_stopping" in symptoms:
        status_report.append("Check: Market analysis, Planning, and Time management (Action)")

    return status_report

# Input Data: Maan lijiye kisi mahila ke saath yeh ho raha hai
symptoms_list = ["constant_tiredness", "sudden_anger", "work_stopping"]
findings = check_person_status("female", symptoms_list)

# Result Output
print("--- Analysis Report ---")
for issue in findings:
    print(f"[!] Analysis: {issue}")

print("\n--- Final Advice ---")
print("Vashikaran ya Totka aksar 'Darr' (Fear) hota hai.")
print("Asal ilaaj 'Data' aur 'Dhyan' (Medical & Mental Health) hai.")
import streamlit as st

# рд╡реЗрдмрд╕рд╛рдЗрдЯ рдХрд╛ рдЯрд╛рдЗрдЯрд▓ рдФрд░ рдбрд┐рдЬрд╛рдЗрди
st.set_page_config(page_title="Logic & Health Analyzer", page_icon="ЁЯТб")

st.title("ЁЯТб рдЬреАрд╡рди рдФрд░ рд╕реНрд╡рд╛рд╕реНрдереНрдп рд╡рд┐рд╢реНрд▓реЗрд╖рдХ (Logic Analyzer)")
st.write("рдпрд╣ рдЯреВрд▓ рдЖрдкрдХреЛ рд╕рдорд╕реНрдпрд╛рдУрдВ рдХреЗ рдкреАрдЫреЗ рдХреЗ рд╡реИрдЬреНрдЮрд╛рдирд┐рдХ рдФрд░ рддрд╛рд░реНрдХрд┐рдХ (Logical) рдХрд╛рд░рдгреЛрдВ рдХреЛ рд╕рдордЭрдиреЗ рдореЗрдВ рдорджрдж рдХрд░рддрд╛ рд╣реИред")

st.divider()

# рдпреВрдЬрд░ рд╕реЗ рдЬрд╛рдирдХрд╛рд░реА рд▓реЗрдирд╛
st.subheader("рд╡рд┐рд╡рд░рдг рджрд░реНрдЬ рдХрд░реЗрдВ")
person_type = st.selectbox("рд╡реНрдпрдХреНрддрд┐ рдХрд╛ рдЪрдпрди рдХрд░реЗрдВ:", ["рдорд╣рд┐рд▓рд╛ (Female)", "рдкреБрд░реБрд╖ (Male)"])
symptoms = st.multiselect(
    "рд▓рдХреНрд╖рдг рдпрд╛ рд╕рдорд╕реНрдпрд╛ рдЪреБрдиреЗрдВ (рдЖрдк рдПрдХ рд╕реЗ рдЬреНрдпрд╛рджрд╛ рдЪреБрди рд╕рдХрддреЗ рд╣реИрдВ):",
    ["рд▓рдЧрд╛рддрд╛рд░ рдердХрд╛рди", "рдЕрдЪрд╛рдирдХ рдЧреБрд╕реНрд╕рд╛ рдпрд╛ рдЪрд┐рдбрд╝рдЪрд┐рдбрд╝рд╛рдкрди", "рдХрд╛рдо рдореЗрдВ рдорди рди рд▓рдЧрдирд╛", "рд╡реНрдпрд╛рдкрд╛рд░/рдХрд╛рдо рдореЗрдВ рд░реБрдХрд╛рд╡рдЯ", "рдиреАрдВрдж рди рдЖрдирд╛"]
)

if st.button("рд╡рд┐рд╢реНрд▓реЗрд╖рдг рдХрд░реЗрдВ (Analyze)"):
    st.subheader("ЁЯУЛ рд╡рд┐рд╢реНрд▓реЗрд╖рдг рд░рд┐рдкреЛрд░реНрдЯ:")
    
    if not symptoms:
        st.warning("рдХреГрдкрдпрд╛ рдХрдо рд╕реЗ рдХрдо рдПрдХ рд▓рдХреНрд╖рдг рдЪреБрдиреЗрдВред")
    else:
        for s in symptoms:
            if s == "рд▓рдЧрд╛рддрд╛рд░ рдердХрд╛рди":
                st.info(f"**{s}:** рдпрд╣ рдЕрдХреНрд╕рд░ рд╡рд┐рдЯрд╛рдорд┐рди D, B12 рдпрд╛ рд╣реАрдореЛрдЧреНрд▓реЛрдмрд┐рди рдХреА рдХрдореА рдХреЗ рдХрд╛рд░рдг рд╣реЛрддрд╛ рд╣реИред рдХреГрдкрдпрд╛ рдбреЙрдХреНрдЯрд░ рд╕реЗ рдЪреЗрдХрдЕрдк рдХрд░рд╛рдПрдВред")
            
            if s == "рдЕрдЪрд╛рдирдХ рдЧреБрд╕реНрд╕рд╛ рдпрд╛ рдЪрд┐рдбрд╝рдЪрд┐рдбрд╝рд╛рдкрди":
                st.info(f"**{s}:** рдорд╣рд┐рд▓рд╛рдУрдВ рдореЗрдВ рдпрд╣ рд╣рд╛рд░реНрдореЛрдирд▓ рдмрджрд▓рд╛рд╡ рдпрд╛ рдЕрддреНрдпрдзрд┐рдХ рдорд╛рдирд╕рд┐рдХ рддрдирд╛рд╡ (Stress) рдХрд╛ рд╕рдВрдХреЗрдд рд╣реЛ рд╕рдХрддрд╛ рд╣реИред")
            
            if s == "рдХрд╛рдо рдореЗрдВ рдорди рди рд▓рдЧрдирд╛":
                st.info(f"**{s}:** рдпрд╣ 'рдмрд░реНрдирдЖрдЙрдЯ' рдпрд╛ рдкреНрд░реЗрд░рдгрд╛ (Motivation) рдХреА рдХрдореА рд╣реЛ рд╕рдХрддреА рд╣реИред рдереЛрдбрд╝рд╛ рдмреНрд░реЗрдХ рд▓реЗрдВ рдФрд░ рдирдИ рд╢реБрд░реБрдЖрдд рдХрд░реЗрдВред")
            
            if s == "рд╡реНрдпрд╛рдкрд╛рд░/рдХрд╛рдо рдореЗрдВ рд░реБрдХрд╛рд╡рдЯ":
                st.success(f"**{s}:** рдХрд╛рдо рд░реБрдХрдирд╛ рдХрд┐рд╕реА рдЯреЛрдиреЗ-рдЯреЛрдЯрдХреЗ рд╕реЗ рдирд╣реАрдВ, рдмрд▓реНрдХрд┐ рдорд╛рд░реНрдХреЗрдЯ рдХреА рд╕реНрдерд┐рддрд┐ рдпрд╛ рдкреНрд▓рд╛рдирд┐рдВрдЧ рдХреА рдХрдореА рд╕реЗ рд╣реЛрддрд╛ рд╣реИред рдЕрдкрдиреА рд░рдгрдиреАрддрд┐ (Strategy) рдмрджрд▓реЗрдВред")
            
            if s == "рдиреАрдВрдж рди рдЖрдирд╛":
                st.info(f"**{s}:** рдпрд╣ рдПрдВрдЧреНрдЬрд╛рдпрдЯреА (Anxiety) рдпрд╛ рдХреИрдлреАрди рдХреЗ рдЬреНрдпрд╛рджрд╛ рд╕реЗрд╡рди рд╕реЗ рд╣реЛ рд╕рдХрддрд╛ рд╣реИред рд╕реЛрдиреЗ рд╕реЗ рдкрд╣рд▓реЗ рдореЛрдмрд╛рдЗрд▓ рдХрд╛ рдЙрдкрдпреЛрдЧ рдХрдо рдХрд░реЗрдВред")

    st.divider()
    st.write("**рд╕реБрдЭрд╛рд╡:** рд╕рдХрд╛рд░рд╛рддреНрдордХ рд╕реЛрдЪ рд░рдЦреЗрдВ рдФрд░ рдЕрдВрдзрд╡рд┐рд╢реНрд╡рд╛рд╕ рдХреЗ рдмрдЬрд╛рдп рд╕реНрд╡рд╛рд╕реНрдереНрдп рдФрд░ рд╕рд╣реА рдпреЛрдЬрдирд╛ рдкрд░ рдзреНрдпрд╛рди рджреЗрдВред")
